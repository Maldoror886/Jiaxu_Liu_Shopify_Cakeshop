<div style="background-color: #F4F2EE; width: 100%;height: 600px;padding-top: 5%;padding-bottom:5%">
			
			<div class="aboutA_t">
						
			  
			  			<div class="text-main-t">
			              
			              <h4 style="text-align: left; margin-right: 20px;margin-top: 20px; color: #E2A36B;">{{section.settings.textxbt}}</h4>
							<p style="margin-top:12% ;">
								<h3 style="font-weight: bold;color:#FFF;">{{section.settings.textbt}}</h3>
								{{section.settings.textxiebt}}
							  <p style="width: 100%;font-size:16px;line-height:20px;">
										{{section.settings.text}}
							  </p>
			              </p>
						</div>
						
						<div class="main-t">
										{%- assign img_url = section.settings.banner | img_url: '400x500' -%}
										<img
										    src="{{ img_url }}"
										    data-src="{{ img_url }}"
										    style="object-fit: contain;"
										    data-sizes="auto"
										    alt="" data-image>
											
									</div>
					</div>
		</div>
<style>
.aboutA_t{
						display: flex;
						width: 80%;
						height: 500px;
						justify-content: center;
						margin: 0 auto;
						
						
					}
					.main-t{
						flex: 1;
						height: 200px;
						
					}
					.main-t>img{
						width:100%;
						height: 500px;
					}
					.text-main-t{
						flex: 1;
						height: 100%;
						line-height: 100%;
						
						text-align: left;
		              color:#000;
					}
  @media (max-width: 768px) {
   
  .aboutA_t {
   	display: block;
    width: 100%;
    height: 500px;
    
}
  .aboutA_t>.main-t{
    display:none;
  }
    .text-main-t{
      text-align: center;
    }
  
}
		
		</style>

{% schema %}
  {
    "name": "aout-1-foot",
    "settings": [
	{
		"id":"text",
		"type":"textarea",
		"label":"Add your text",
		"default":"Add your text"
	},
	{
          "type":"image_picker",
          "id":"banner",
          "label":"Banner"
        },
	{
		"id":"textxbt",
		"type":"text",
		"label":"Add your text",
		"default":"Add your text"
	},
	{
		"id":"textbt",
		"type":"text",
		"label":"Add your title",
		"default":"Our Macarons"
	},
	{
		"id":"textxiebt",
		"type":"textarea",
		"label":"Add your textarea",
"default":"Blue Diamond Almond Powder + Valrhona Cocoa Powder"
	}

]
  }
{% endschema %}

