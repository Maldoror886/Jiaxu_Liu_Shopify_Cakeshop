<div class="aboutA_1">
			<div class="main">
				{%- assign img_url = section.settings.banner | img_url: '500x500' -%}
				<img
				    
				    src="{{ img_url }}"
				    data-src="{{ img_url }}"
				    
				    data-sizes="auto"
				    alt="" data-image>
				
				  
<!-- 				<img src="https://cdn.shopifycdn.net/s/files/1/0639/2351/9705/files/layered-cake-with-decorative-napkin.jpg?v=1650466991"/> -->
				
			</div>
  
  			<div class="text-main">
              
              <h4 style="text-align: right; margin-right: 20px;margin-top: 20px; color: #E2A36B;">{{section.settings.textxbt}}
				</h4>
              <p style="margin-top:12% ;">
					<h3 style="font-weight: bold;color:#FFF;">{{section.settings.textbt}}</h3>
					
              <p style="width: 50%;margin: 0 auto;font-size:16px;line-height:20px;">
						{{section.settings.text}}
              </p>
              </p>

			</div>
		</div>

<style>
.aboutA_1{
				display: flex;
				width: 100%;
				height: 500px;
				justify-content: center;
			}
			.main{
				flex: 1;
				height: 200px;
				
			}
			.main>img{
				width:100%;
				height: 500px;
			}
			.text-main{
				flex: 1;
				height: 100%;
				line-height: 100%;
				background-color:#8298B0 ;
				text-align: center;
              	color:#FFFFFF;
			}
  @media (max-width: 768px) {
   
  .aboutA_1 {
   	display: block;
    width: 100%;
    height: 500px;
    
}
  .aboutA_1>.main{
    flex:0;
  }
  
}

</style>
{% schema %}
  {
    "name": "about div",
    "settings": [
	{
		"id":"text",
		"type":"textarea",
		"label":"Add your text",
		"default":"Add your text"
	},
	{
          "type":"image_picker",
          "id":"banner",
          "label":"Banner"
        },
	{
		"id":"textxbt",
		"type":"text",
		"label":"Add your text",
		"default":"Add your text"
	},
	{
		"id":"textbt",
		"type":"text",
		"label":"Add your title",
		"default":"Our Macarons"
	}

]
  }
{% endschema %}

